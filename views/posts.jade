doctype html
html
  head
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
  div(class="topnav")
    button() Julie's Happiness Log
    button(onclick="home()", class="post_button") Home
    button(onclick="thoughts()", class="post_button") Thoughts
    button(onclick="experience()", class="post_button") Experiences
    button(onclick="people()", class="post_button") People
  div(id="posts")
    each post in posts
      span= post.date.toDateString()
      p=post.text
script.
  function home() {
    window.location.href = "/"
  }
  function thoughts() {
    window.location.href = '/thoughts'
  }
  function experience() {
    window.location.href = '/experience'
  }
  function people() {
    window.location.href = '/people'
  }
